{
    "artefacts": {
        "requirements": {
            "paths": ["doc/requirements/REQUIREMENTS.md"],
            "parser": "markdown"
        },
        "design": {
            "paths": ["doc/requirements/DESIGN.md"],
            "parser": "markdown"
        },
        "formats": {
            "paths": ["doc/requirements/FORMATS.md"],
            "parser": "markdown"
        },
        "code": {
            "paths": ["src/**/*.rs"],
            "parser": "rust_cov_marks"
        },
        "unsafe_code": {
            "paths": ["src/**/*.rs"],
            "parser": "rust_unsafe"
        },
        "unsafe_reasoning": {
            "paths": ["doc/requirements/unsafe_reasoning.md"],
            "parser": "markdown"
        }

    },
    "tracing": [
        [ "requirements", ["design",          "formats" ]],
        [ "design",       ["formats",         "code"]],
        [ "formats",      ["code"             ]],
        [ "unsafe_code",  ["unsafe_reasoning" ]]
    ],
    "jobs": {
        "tags" : {
            "query" :  "Trace",
            "format": "Tags"
        }
    }
}

